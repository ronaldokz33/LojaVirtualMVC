<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Loja Virtual</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        @Html.ActionLink("Loja virtual treta", "Index", "Home", null, new { @class = "navbar-brand" })

    </div>
    <div class="row panel" style="margin-top:50px;">
        <div id="categorias" class="col-xs-3">
            <p>Tretas de categoria</p>
        </div>
        <div id="Conteudo" class="col-xs-9">
            @RenderBody()
        </div>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - <a href="http://www.ronaldonanet.com.br/">Ronaldo Lemos Junior</a></p>
    </footer>
</body>
</html>